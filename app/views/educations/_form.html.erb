<%= form_for ([person, person.educations.build]) do |f| %>
    <div class="field">
        <%= f.label :elementary_school, class: "person-label"%>
        <%= f.text_field :elementary_school, placeholder: "Elementary School Name", class: "person-input"  %>
    </div>
    <div class="field">
        <%= f.label :elementary_year, class: "person-label"%>
        <%= f.text_field :elementary_year, placeholder: "Year Attended", class: "person-input" %>
    </div>
    <div class="field">
        <%= f.label :secondary_school, class: "person-label"%>
        <%= f.text_field :secondary_school, placeholder: "Secondary School Name", class: "person-input"  %>
    </div>
    <div class="field">
        <%= f.label :secondary_year, class: "person-label"%>
        <%= f.text_field :secondary_year, placeholder: "Year Attended", class: "person-input"  %>
    </div>
    <div class="field">
        <%= f.label :tertiary_school, class: "person-label"%>
        <%= f.text_field :tertiary_school, placeholder: "Tertiary School Name", class: "person-input"  %>
    </div>
    <div class="field">
        <%= f.label :tertiary_year, class: "person-label"%>
        <%= f.text_field :tertiary_year, placeholder: "Year Attended", class: "person-input"  %>
    </div>
    <div class="field">
        <% if controller.action_name == 'new' %>
            <%= f.submit 'Next', class: "btn register" %>
        <% elsif controller.action_name == 'edit' %>
            <%= f.submit 'Save', class: "btn register" %>
        <% end %>
    </div>
<% end %>