<%= form_for ([person, reference]) do |f| %>
    
        <div class="field">
            <%= f.label :name, class: "person-label"%>
            <%= f.text_field :name, placeholder: "Name", class: "person-input"  %>
        </div>

        <div class="field">
            <%= f.label :profession, class: "person-label"%>
            <%= f.text_field :profession, placeholder: "Job Position", class: "person-input"  %>
        </div>

        <div class="field">
            <%= f.label :company, class: "person-label"%>
            <%= f.text_field :company, placeholder: "Company Name", class: "person-input"  %>
        </div>

        <div class="field">
            <%= f.label :contact, class: "person-label"%>
            <%= f.text_field :contact, placeholder: "Contact Number", class: "person-input"  %>
        </div>
        
        <div class="field">
            <% if controller.action_name == 'new' %>
                <%= f.submit 'Next', class: "btn register" %>
            <% elsif controller.action_name == 'edit' %>
                <%= f.submit 'Save', class: "btn register" %>
            <% end %>
        </div>
        
<% end %>