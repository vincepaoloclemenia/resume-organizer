<div class="panel-body">
    <fieldset>   
        <%= f.hidden_field :_destroy %>
        <%= link_to "remove", '#', class: "remove_fields" %>

        <div class="field">
            <%= f.label :education_level, class: "person-label"%>
            <%= f.select :education_level, options_for_select(["Elementary", "Secondary", "Tertiary"], selected: :education_level), { include_blank: "Education Level", value: :education_label }, {class: "education-level-label"} %>
            </div>

        <div class="field">
            <%= f.label :school_name, class: "person-label"%>
            <%= f.text_field :school_name, placeholder: "School Name", class: "person-input" %>
        </div>

        <div class="field">
            <%= f.label :year_attended, class: "person-label"%>
            <%= f.text_field :year_attended, placeholder: "Year Attended", class: "person-input" %>
        </div>    
    </fieldset>
</div>