<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if notice %>
    <%= react_component('NoticeWrapper', { message: notice, type: 'success' }) %>
  <% elsif alert %>
    <%= react_component('NoticeWrapper', { message: alert, type: 'danger' }) %>
  <% end %> 
  <nav class = "navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Resume Organizer", root_path, class: "navbar-brand" %>  
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Add New Resume', new_person_path %></li>         
        </ul>
      </div>
    </div>
  </nav>

  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
